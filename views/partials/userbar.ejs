<% if (currentUser) { %>
<div class="mt-1">
  <div class="container d-flex justify-content-end align-items-center">
    <div class="d-flex align-items-center">
      <div class="me-1">
        <i class="bi bi-person"></i>
        <span class="text-secondary">uživatel: </span
        ><a class="link-success" href="/users/profile"
          ><%= currentUser.username %></a
        >
      </div>
      <% if (currentUser.isVerified) { %>
      <span class="badge rounded-pill bg-success">ověřen/a</span>
      <% } else { %>
      <span class="badge rounded-pill bg-danger">neověřen/a</span>
      <% } %>
    </div>
  </div>
</div>
<% } %>
