<% layout('/layouts/mainTemplate') %>

<h1
  class="
    display-6
    d-inline
    fw-bold
    border-bottom border-5 border-success
    lh-base
  "
>
  Top 10 Komentářů
</h1>

<% if(firstColComments.length === 0) { %>
<h3 class="mt-5">
  Zatím žádný komentář nedostal ani jeden Like. Žebříček 10 nejlepších komentářů
  se začne tvořit až aspoň jeden komentář dostane aspoň jeden Like.
</h3>
<% } %>

<div class="row mt-5">
  <div class="col-md">
    <% firstColComments.forEach((comment, idx) => { %>
    <div class="card mb-3 shadow">
      <div class="card-header d-flex">
        <span class="fw-bold me-1"><%= idx+1 %>.</span>
        <% if(idx+1===1) { %>
        <i
          class="em em-first_place_medal me-1"
          aria-role="presentation"
          aria-label="FIRST PLACE MEDAL"
        ></i>
        <% } else if (idx+1==2) { %>
        <i
          class="em em-second_place_medal me-1"
          aria-role="presentation"
          aria-label="SECOND PLACE MEDAL"
        ></i>
        <% } else if (idx+1==3) { %>
        <i
          class="em em-third_place_medal me-1"
          aria-role="presentation"
          aria-label="THIRD PLACE MEDAL"
        ></i>
        <% } else if (idx+1==4) { %>
        <i
          class="em em-potato me-1"
          aria-role="presentation"
          aria-label="POTATO"
        ></i>
        <% } %>
        <span class="fw-bold"><%= comment.author.username %></span>
        <div class="ms-auto">
          <time class="badge rounded-pill bg-secondary text-white text-wrap"
            ><%= comment.date %></time
          >
        </div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= comment.text %></p>
        <div class="d-flex justify-content-end">
          <div class="me-1 badge bg-success d-flex align-items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="15"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              />
            </svg>
            <span class="ms-1 fs-6"><%= comment.votes %></span>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
  <div class="col-md">
    <% firstColComments.forEach((comment, idx) => { %>
    <div class="card mb-3 shadow">
      <div class="card-header d-flex">
        <span class="fw-bold me-1"><%= idx+6 %>.</span>
        <span class="fw-bold"><%= comment.author.username %></span>
        <div class="ms-auto">
          <time class="badge rounded-pill bg-secondary text-white text-wrap"
            ><%= comment.date %></time
          >
        </div>
      </div>
      <div class="card-body">
        <p class="card-text"><%= comment.text %></p>
        <div class="d-flex justify-content-end">
          <div class="me-1 badge bg-success d-flex align-items-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="15"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
              />
            </svg>
            <span class="ms-1 fs-6"><%= comment.votes %></span>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
