<% layout('/layouts/mainTemplate') %>

<h1 class="my-3">Top 32 Jamek</h1>

<div class="mt-4">
  <% holes.forEach((hole, idx) => { %>
  <div class="row h-auto mb-4 g-0">
    <div class="col-auto ms-2 ms-sm-5 me-2 me-sm-5 mb-sm-3">
      <h2 class="fs-1"><%= idx+1 %>.</h2>
      <% if(idx+1===1) { %>
      <i
        class="em em-first_place_medal"
        aria-role="presentation"
        aria-label="FIRST PLACE MEDAL"
      ></i>
      <% } else if (idx+1==2) { %>
      <i
        class="em em-second_place_medal"
        aria-role="presentation"
        aria-label="SECOND PLACE MEDAL"
      ></i>
      <% } else if (idx+1==3) { %>
      <i
        class="em em-third_place_medal"
        aria-role="presentation"
        aria-label="THIRD PLACE MEDAL"
      ></i>
      <% } else if (idx+1==4) { %>
      <i class="em em-potato" aria-role="presentation" aria-label="POTATO"></i>
      <% } %>
    </div>
    <div class="card col shadow">
      <div class="row g-0">
        <div class="col-auto d-none d-md-inline">
          <img
            src="/img/teesign.jpg"
            alt="Random teesign"
            class="img-fluid"
            style="max-width: 150px"
          />
        </div>
        <div class="col">
          <div class="card-header">
            <h5 class="fw-bold d-inline">
              <a href="/courses/<%= hole.course._id %>"
                ><%= hole.course.name %></a
              >
            </h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <span class="fw-bold">Jamka č:</span> <%= hole.number %>
            </li>
            <li class="list-group-item">
              <span class="fw-bold">Par:</span> <%= hole.par %>
            </li>
            <li class="list-group-item">
              <span class="fw-bold">Délka jamky:</span> <%= hole.length %> m
            </li>
            <li class="list-group-item">
              <div class="row">
                <div class="col-sm"><span class="fw-bold">Počet nominací:</span> <%= hole.votes %></div>
              <% if (currentUser && currentUser.nominatedHoles.find(userHole => userHole._id.toString() === hole._id.toString())) { %>
              <div class="col-sm-auto">
                <span class="badge rounded-pill bg-info text-dark text-wrap">Tvá nominace</span> 
              </div>
              <% } %>
            </div>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% }) %>
</div>

